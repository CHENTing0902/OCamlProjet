digraph finite_state_machine { 
	 rankdir=LR;
	 size="8,5";
	 node [shape = circle];
	 4 -> 5 [ label = "0 "]; 
	 4 -> 3 [ label = "0 "]; 
	 3 -> 5 [ label = "1 "]; 
	 3 -> 2 [ label = "9 "]; 
	 2 -> 4 [ label = "3 "]; 
	 2 -> 1 [ label = "4 "]; 
	 1 -> 2 [ label = "10 "]; 
	 1 -> 3 [ label = "0 "]; 
	 0 -> 1 [ label = "4 "]; 
	 0 -> 2 [ label = "2 "]; 
}